<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Talk</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Archivo+Black&family=Noto+Sans+Cypro+Minoan&family=Noto+Sans+JP&family=Roboto&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <header
      class='display-flex justify-space-between align-center p-4 text-bg-secondary'
    >
      <h1 class='archivo'>
        Tech Talk
      </h1>
      <!-- Only display the logout button if the user is logged in -->
      {{#if logged_in}}
        <nav class='archivo'>
          <button class='btn' id='home'>Home</button>
          <button class='btn' id='dashboard'>Dashboard</button>
          <button class='btn' id='logout'>logout</button>
        </nav>
      {{/if}}
    </header>
    <main class='container container-fluid mt-5'>
      {{{body}}}
    </main>
    <footer>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>