<div class='row mb-5'>
  <div class='post-container p-3'>
    <div class='post-card col-12 p-1'>
      <h3 class='post-highlight text-center p-1'>{{title}}</h3>
      <p class='p-3'>{{content}}</p>
      <p class='post-highlight text-end'>Posted by
        {{posterName}}
        on
        {{createdOn}}
      </p>
    </div>
    {{#if (eq posterId UserId)}}
      <div class='m-2'>
        <button id='update-btn' class='btn btn-primary'>Update</button>
        <button id='delete-btn' class='btn btn-danger'>Delete</button>
      </div>
    {{/if}}
    {{#each comments as |comment|}}
      <div class='bubble'>
        <p class='p-1'>{{comment.content}}</p>
        <p class='p-1'>Posted by
          {{comment.user.name}}
          on
          {{comment.createdOn}}</p>
      </div>
    {{/each}}
    <form action=''>
      <input id='comment-input' type='text' />
      <input type='hidden' id='post-id' value='{{id}}' />
      <button id='comment-btn' class='btn btn-primary'>Add Comment</button>
    </form>

  </div>
</div>

<script src='/js/post-comment.js'></script>